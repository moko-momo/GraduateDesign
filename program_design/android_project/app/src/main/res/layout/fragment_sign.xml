<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/cv_in_login"
        android:layout_width="330dp"
        android:layout_height="230dp"
        android:foreground = "?attr/selectableItemBackground"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/loginuser"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="55dp" />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/Laccount"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="60dp"
            android:hint="账号">
            <EditText
                android:id="@+id/account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/loginlock"
            android:layout_marginTop="105dp"
            android:layout_marginLeft="25dp" />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/Lpwd"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="60dp"
            android:hint="密码">
            <EditText
                android:id="@+id/pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:inputType="textPassword"/>
        </android.support.design.widget.TextInputLayout>
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/loginkey"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="25dp" />
        <EditText
            android:id="@+id/pwd2"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:inputType="textPassword"
            android:layout_marginTop="145dp"
            android:layout_marginLeft="60dp"
            android:hint="再次输入密码" />
        <ImageView
            android:id="@+id/imageVie5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/loginsex"
            android:layout_marginTop="188dp"
            android:layout_marginLeft="25dp" />
        <RadioGroup
            android:id="@+id/Rg_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="185dp"
            android:layout_marginLeft="60dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/male" />
            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/female" />

        </RadioGroup>
        <Button
            android:id="@+id/tologinbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回到登陆"
            android:background="@android:color/transparent"
            android:layout_marginTop="177dp"
            android:layout_marginLeft="230dp"/>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#9A9A9A"
        android:text="--注册即默认同意《用户使用协议》--"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_in_login"/>
    <com.dd.CircularProgressButton
        android:id="@+id/signbtn"
        android:layout_width="200dp"
        android:layout_height="64dp"
        app:cpb_selectorIdle="@drawable/button_login"
        app:cpb_selectorComplete="@drawable/button_login"
        app:cpb_selectorError="@drawable/button_login_erro"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_marginBottom="30dp"
        app:cpb_colorIndicator="#000000"
        app:cpb_textComplete="欢迎"
        app:cpb_textError="注册失败"
        app:cpb_textIdle="注册"
        app:cpb_cornerRadius="48dp"/>
</android.support.constraint.ConstraintLayout>
